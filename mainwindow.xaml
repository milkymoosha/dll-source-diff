<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:TestMode="test-mode"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:mycontrols="clr-namespace:WpfApp1.Controls"
        Loaded="Window_Loaded" x:Name="win" Title="MainWindow" Height="450" Width="800">
  <FrameworkElement.Resources>
    <DataTemplate x:Key="MyGridDataTemplate">
      <mycontrols:MyGrid Person="{Binding ElementName=win, Path=MyPerson}"/>
    </DataTemplate>
  </FrameworkElement.Resources>
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="30"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Button Click="testButton_Click" x:Name="testButton" Grid.Column="0" Grid.Row="0" Height="23" Width="100"
            Content="Test Button"/>
    <ContentControl x:Name="myContentControl" Grid.Column="0" Grid.Row="1"/>
  </Grid>
</Window>